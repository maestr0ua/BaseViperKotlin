<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/red_900</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorPrimary">@color/red_600</item>
        <item name="colorControlActivated">@color/green_700</item>
        <item name="android:windowBackground">@color/grey_200</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">
            @android:transition/move
        </item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">
            @android:transition/move
        </item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">false
        </item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">false
        </item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/window_background</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!--WIDGETS-->
    <style name="BaseTextStyle" parent="android:Widget">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/grey_400</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--Input text widgets-->
    <style name="InputTheme" parent="BaseTextStyle">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColorPrimary">@color/blue_400</item>
        <item name="android:textColorSecondary">@color/blue_400</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="InputTheme.Blue" parent="InputTheme">
        <item name="android:textColor">@color/blue_400</item>
    </style>

    <style name="InputTheme.Grey" parent="InputTheme">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="InputTheme.Green" parent="InputTheme">
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textColorHint">@color/green_500</item>
        <item name="android:textColorPrimary">@color/green_600</item>
        <item name="android:textColorSecondary">@color/green_600</item>
    </style>

    <style name="BlueEditAut" parent="android:Widget">
        <item name="android:textColorPrimary">@color/grey_600</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/blue_400</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/blue_400
        </item>
        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
        <item name="android:inputType">textNoSuggestions|textPassword</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RedButtonAut">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/raised_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget">
        <item name="android:textColorPrimary">@color/grey_600</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/blue_400</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/blue_400
        </item>
        <item name="colorControlNormal">@color/blue_400</item>
        <item name="colorControlActivated">@color/blue_400</item>
    </style>


    <!--MAIN THEME-->
    <style name="MainTheme" parent="BaseTextStyle" />
    <!--titles-->
    <style name="MainTheme.Title" parent="MainTheme">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/title_selector</item>
    </style>

    <style name="MainTheme.Title.Big" parent="@style/MainTheme.Title">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="MainTheme.Title.Normal" parent="@style/MainTheme.Title">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="MainTheme.Title.Small" parent="@style/MainTheme.Title">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MainTheme.Title.UltraSmall" parent="@style/MainTheme.Title">
        <item name="android:textSize">@dimen/text_ultra_small</item>
    </style>

    <style name="MainTheme.Title.Normal.Bold" parent="@style/MainTheme.Title.Normal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.Title.Big.Bold" parent="@style/MainTheme.Title.Big">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.Title.Small.Bold" parent="@style/MainTheme.Title.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.Title.UltraSmall.Bold" parent="@style/MainTheme.Title.UltraSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <!--subtitles-->
    <style name="MainTheme.SubTitle" parent="@style/MainTheme">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/subtitle_selector</item>
    </style>

    <style name="MainTheme.SubTitle.Big" parent="@style/MainTheme.SubTitle">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="MainTheme.SubTitle.Normal" parent="@style/MainTheme.SubTitle">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MainTheme.SubTitle.Small" parent="@style/MainTheme.SubTitle">
        <item name="android:textSize">@dimen/text_ultra_small</item>
    </style>

    <style name="MainTheme.SubTitle.Big.Bold" parent="@style/MainTheme.SubTitle.Big">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.SubTitle.Normal.Bold" parent="@style/MainTheme.SubTitle.Normal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.SubTitle.Small.Bold" parent="@style/MainTheme.SubTitle.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <!--title-->
    <style name="MainTheme.Description" parent="@style/MainTheme">
        <item name="android:textColor">@color/description_selector</item>
    </style>

    <style name="MainTheme.Description.VeryBig" parent="@style/MainTheme.Description">
        <item name="android:textSize">@dimen/text_big</item>
    </style>

    <style name="MainTheme.Description.Big" parent="@style/MainTheme.Description">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="MainTheme.Description.Normal" parent="@style/MainTheme.Description">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="MainTheme.Description.Small" parent="@style/MainTheme.Description">
        <item name="android:textSize">@dimen/text_ultra_small</item>
    </style>

    <style name="MainTheme.Description.Big.Bold" parent="@style/MainTheme.Description.Big">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.Description.Normal.Bold" parent="@style/MainTheme.Description.Normal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainTheme.Description.Small.Bold" parent="@style/MainTheme.Description.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog style -->
    <style name="DialogButtonStyle" parent="@style/MainTheme.Title.UltraSmall.Bold">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/button_blue_text_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">gravity</item>
    </style>

</resources>
